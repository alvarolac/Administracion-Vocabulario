<GridPane 
    fx:controller="vocabularioadmin.FXMLListPalabrasController" 
    xmlns:fx="http://javafx.com/fxml" 
    alignment="center" 
    hgap="10" 
    vgap="10"
    styleClass="root">
    
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    
    
    <ImageView 
        id="boxImage"
        GridPane.halignment="CENTER"
        GridPane.columnIndex="0" 
        GridPane.rowIndex="0">    
        <image>
            <Image url="@vocabulario.png" />
        </image>
    </ImageView>

    <VBox 
        spacing="0"
        GridPane.halignment="CENTER" 
        alignment="center"
        GridPane.columnIndex="0"
        prefHeight="400.0" 
        prefWidth="400.0"  
        maxWidth="400.0"  
        GridPane.rowIndex="2">
        <ListView 
            fx:id="listBoxMain" 
            GridPane.halignment="CENTER"
            prefHeight="400.0" 
            prefWidth="400.0" 
            onMouseClicked="#handleMouseClick"/>
    </VBox>
        
        
    <Button 
        text="Volver" 
        GridPane.halignment="CENTER"
        fx:id="volverButtonCRUD"
        onAction="#handleVolverButtonAction"
        prefWidth="200"    
        GridPane.columnIndex="0" 
        GridPane.rowIndex="6"/>
    
    
  <stylesheets>
    <URL value="@crud.css" />
  </stylesheets>
    
</GridPane>
