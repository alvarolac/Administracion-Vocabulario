<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>



<GridPane fx:controller="vocabularioadmin.FXMLPalabrasCRUDController" 
    xmlns:fx="http://javafx.com/fxml" 
    alignment="center" 
    hgap="10"
    vgap="10"
    styleClass="root">
    
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    
    
    <ImageView id="boxImage"
    GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2">    
        <image>
            <Image url="@vocabulario.png" />
        </image>
    </ImageView>



    
    <HBox spacing="0" alignment="center"
        GridPane.columnSpan="2" 
        GridPane.columnIndex="0" GridPane.rowIndex="4">
        <Button text="Crear Palabra" fx:id="crearPalabraButton"
        onAction="#handleCrearButtonAction"     
            />
    </HBox>



    <HBox spacing="0" alignment="center" 
        GridPane.columnSpan="2"
        GridPane.columnIndex="0" GridPane.rowIndex="6">
        <Button text="Listar Palabras" fx:id="listarPalabrasButton"    
            onAction="#handleListarButtonAction"
        />
    </HBox>
    
    <HBox spacing="0" alignment="center" 
        GridPane.columnSpan="2"
        GridPane.columnIndex="0" GridPane.rowIndex="8">
        <Button text="Eliminar Palabra" fx:id="eliminarPalabraButton"
        onAction="#handleEliminarButtonAction"    
            />
    </HBox>


    <HBox spacing="0" alignment="center" 
        GridPane.columnSpan="2"
        GridPane.columnIndex="0" GridPane.rowIndex="12">
        <Button text="Volver" fx:id="volverButtonCRUD"
        onAction="#handleVolverButtonAction"    
            />
    </HBox>


  <stylesheets>
    <URL value="@crud.css" />
  </stylesheets>
    
</GridPane>
