<GridPane 
    fx:controller="vocabularioadmin.FXMLCreateCategoriaController" 
    xmlns:fx="http://javafx.com/fxml" 
    alignment="center" 
    hgap="10" 
    vgap="10"
    styleClass="root">
    
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
    </columnConstraints>

    
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    
    
    <ImageView 
        id="boxImage"
        GridPane.columnIndex="0"
        GridPane.halignment="CENTER" 
        GridPane.rowIndex="0"
        GridPane.columnSpan="2">    
        <image>
            <Image url="@vocabulario.png" />
        </image>
    </ImageView>

    <Label 
        text="Nombre: "
        maxWidth="400"
        prefWidth="400"
        GridPane.columnSpan="2"
        GridPane.halignment="CENTER"
        GridPane.columnIndex="0" 
        GridPane.rowIndex="2"/>
 
    <TextField 
        fx:id="categoriaNameField"
        maxWidth="400"
        prefWidth="400"
        GridPane.columnSpan="2"
        GridPane.halignment="CENTER"
        GridPane.columnIndex="0" 
        GridPane.rowIndex="3"/>
    
    <Label 
        text="DescripciÃ³n: "
        maxWidth="400"
        prefWidth="400"
        GridPane.columnSpan="2"
        GridPane.halignment="CENTER"
        GridPane.columnIndex="0" 
        GridPane.rowIndex="4"/>
 
    <TextField 
        fx:id="categoriaDescriptionField"
        maxWidth="400"
        prefWidth="400"
        GridPane.columnSpan="2"
        GridPane.halignment="CENTER"
        GridPane.columnIndex="0" 
        GridPane.rowIndex="5"/>
  
    <Button 
        GridPane.columnIndex="0"
        GridPane.rowIndex="7"
        GridPane.halignment="RIGHT"
        prefWidth="200"
        text="Guardar" 
        fx:id="createCategoriaButton"
        onAction="#handleGuardarButtonAction"/>

    <Button
        GridPane.columnIndex="1"
        GridPane.rowIndex="7" 
        GridPane.halignment="LEFT" 
        text="Volver" 
        fx:id="volverButtonCRUD"
        prefWidth="200"
        onAction="#handleVolverButtonAction"/>    
   

  <stylesheets>
    <URL value="@crud.css" />
  </stylesheets>
    
</GridPane>
