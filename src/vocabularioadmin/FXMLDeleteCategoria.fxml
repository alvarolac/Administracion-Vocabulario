<GridPane fx:controller="vocabularioadmin.FXMLDeleteCategoriaController" 
    xmlns:fx="http://javafx.com/fxml" 
    alignment="center" 
    hgap="10" 
    vgap="10"
    styleClass="root">
    
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
    </columnConstraints>
    
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    
    
    <ImageView 
        id="boxImage"
        GridPane.columnSpan="2"
        GridPane.halignment="CENTER"
        GridPane.columnIndex="0" 
        GridPane.rowIndex="0">    
        <image>
            <Image url="@vocabulario.png" />
        </image>
    </ImageView>

    <Label 
        text="Nombre de la categorÃ­a:"
        maxWidth="400"
        prefWidth="400"
        GridPane.columnSpan="2"
        GridPane.halignment="CENTER"
        GridPane.columnIndex="0" 
        GridPane.rowIndex="2"/>
 
    <TextField 
        fx:id="categoriaField"
        maxWidth="400"
        GridPane.columnSpan="2"
        GridPane.halignment="CENTER"
        GridPane.columnIndex="0" 
        GridPane.rowIndex="4"/>
    

    <Button
        GridPane.columnIndex="0"
        GridPane.rowIndex="7"
        GridPane.halignment="RIGHT"
        prefWidth="200" 
        text="Eliminar" 
        fx:id="eliminarButton"
        onAction="#handleEliminarButtonAction"/>
        
    <Button
        GridPane.columnIndex="1"
        GridPane.rowIndex="7" 
        GridPane.halignment="LEFT"
        prefWidth="200" 
        text="Volver" 
        fx:id="volverButtonCRUD"
        onAction="#handleVolverButtonAction"/>
        

  <stylesheets>
    <URL value="@crud.css" />
  </stylesheets>
    
</GridPane>
